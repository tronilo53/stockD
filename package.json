{
  "build": {
    "copyright": "Luis Tronilo dev stockD.",
    "directories": {
      "output": "release",
      "buildResources": "dist"
    },
    "files": [
      "**/*",
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "publish": {
        "provider": "github",
        "owner": "tronilo53",
        "repo": "stockD"
      }
    },
    "asar": false,
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "removeDefaultUninstallWelcomePage": false,
      "installerIcon": "build/installerIcon.ico",
      "uninstallerIcon": "build/uninstallerIcon.ico",
      "installerHeaderIcon": "build/installerHeaderIcon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": false,
      "shortcutName": "ITSupport",
      "runAfterFinish": false
    }
  },
  "name": "stockD",
  "main": "main.js",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "electron .",
    "electron": "ng build && electron .",
    "pub": "ng build && electron-builder -p always"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.2.0",
    "@angular/common": "^17.2.0",
    "@angular/compiler": "^17.2.0",
    "@angular/core": "^17.2.0",
    "@angular/forms": "^17.2.0",
    "@angular/platform-browser": "^17.2.0",
    "@angular/platform-browser-dynamic": "^17.2.0",
    "@angular/router": "^17.2.0",
    "animate.css": "^4.1.1",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.2",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.3.0",
    "jquery": "^3.7.1",
    "material-symbols": "^0.17.2",
    "popper.js": "^1.16.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.2.0",
    "@angular/cli": "^17.2.0",
    "@angular/compiler-cli": "^17.2.0",
    "@types/jasmine": "~5.1.0",
    "@types/jquery": "^3.5.29",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.3.2"
  }
}
